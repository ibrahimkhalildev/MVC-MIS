                <label for="Name" class="form-label">Name: </label>
                <input type="text" name="txtName" placeholder="Name" class="form-control" id="Name" value="@txtName"/>

                <label for="Age" class="form-label">Age: </label>
                <input type="text" name="txtAge" placeholder="Age" class="form-control" id="Age" value="@txtAge"/>

