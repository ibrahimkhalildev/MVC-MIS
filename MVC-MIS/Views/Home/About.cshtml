        {
            //FormCollection formCollection = (FormCollection)ViewBag.formCollection;
            FormCollection formCollection = (FormCollection)Model;

            txtName = formCollection["txtName"].ToString();
            txtAge = formCollection["txtAge"].ToString();
        }
    }

    <div class="container">

        <div class="col-md-4">

            @using (Html.BeginForm("About", "Home", FormMethod.Post))
